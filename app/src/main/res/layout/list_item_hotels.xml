<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundEvent"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/hotel"
        style="@style/subtitle"
        android:paddingVertical="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/img"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:padding="1dp"
                android:scaleType="fitXY"
                android:layout_weight="1"
                app:srcCompat="@drawable/items_hotel"
                android:contentDescription="@string/empty" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingHorizontal="5dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/stars1"
                        style="@style/stars" />

                    <ImageView
                        android:id="@+id/stars2"
                        style="@style/stars" />

                    <ImageView
                        android:id="@+id/stars3"
                        style="@style/stars" />

                    <ImageView
                        android:id="@+id/stars4"
                        style="@style/stars" />

                    <ImageView
                        android:id="@+id/stars5"
                        style="@style/stars" />

                    <TextView
                        android:id="@+id/price"
                        style="@style/description" />

                </LinearLayout>

                <TextView
                    android:id="@+id/description"
                    style="@style/description"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/contact_phone"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:paddingHorizontal="10dp"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_telf" />

            <ImageButton
                android:id="@+id/contact_web"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:paddingHorizontal="10dp"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_web" />

            <Button
                android:id="@+id/check"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@color/orange"
                android:text="@string/hotels_button"
                android:textSize="12sp" />
        </LinearLayout>

</LinearLayout>