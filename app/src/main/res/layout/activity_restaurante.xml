<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Restaurante">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="55dp"
            android:paddingBottom="55dp">
            <!-- A CardView that contains a TextView -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    app:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true"
                    android:tag="mediterraneo">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@drawable/vinyam"></ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Vinyam"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"></TextView>

                        <TableLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"


                            >
                            <TableRow>
                                <ImageView
                                    android:layout_width="75dp"
                                    android:layout_height="75dp"
                                    android:layout_marginRight="25dp"
                                    android:layout_marginBottom="10dp"

                                    android:src="@drawable/web1"></ImageView>
                                <ImageView
                                    android:layout_width="75dp"
                                    android:layout_height="75dp"
                                    android:layout_marginRight="25dp"
                                    android:layout_marginBottom="10dp"
                                    android:src="@drawable/tel1"></ImageView>
                                <ImageView
                                    android:layout_width="75dp"
                                    android:layout_height="75dp"
                                    android:layout_marginBottom="10dp"
                                    android:src="@drawable/map1"></ImageView>
                            </TableRow>


รง
                        </TableLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>




            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:cardElevation="5dp"
                card_view:cardUseCompatPadding="true"
                android:tag="chino">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/wagaya"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Wagaya"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"></TextView>
                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"


                        >
                        <TableRow>
                            <ImageView
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_marginRight="25dp"
                                android:layout_marginBottom="10dp"

                                android:src="@drawable/web1"></ImageView>
                            <ImageView
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_marginRight="25dp"
                                android:layout_marginBottom="10dp"
                                android:src="@drawable/tel1"></ImageView>
                            <ImageView
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_marginBottom="10dp"
                                android:src="@drawable/map1"></ImageView>
                        </TableRow>



                    </TableLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:cardElevation="5dp"
                card_view:cardUseCompatPadding="true"
                android:tag="gastronomia catalana"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/eltrabuc"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="El trabuc"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"></TextView>
                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"


                        >
                        <TableRow>
                            <ImageView
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_marginRight="25dp"
                                android:layout_marginBottom="10dp"

                                android:src="@drawable/web1"></ImageView>
                            <ImageView
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_marginRight="25dp"
                                android:layout_marginBottom="10dp"
                                android:src="@drawable/tel1"></ImageView>
                            <ImageView
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_marginBottom="10dp"
                                android:src="@drawable/map1"></ImageView>
                        </TableRow>



                    </TableLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </ScrollView>
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/flecha2"
            android:id="@+id/retroceder">

        </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurants"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:textColor="@color/white">
            </TextView>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/filtrar2"
            android:layout_gravity="right"
            android:layout_marginRight="15dp">
            <!--<Spinner
                android:id="@+id/spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />-->
        </ImageView>
    </androidx.appcompat.widget.Toolbar>

</FrameLayout>